<?xml version="1.0" encoding="utf-8"?>
<com.yto.zhang.util.iphoneDialog.FrameDialogView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical|center_horizontal" >

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/dialog_panel"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >

        <LinearLayout
            android:id="@+id/dialog_title_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_marginTop="8dip" >

            <TextView
                android:id="@+id/dialog_title"
                style="@style/frameDialogStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/back"
                android:gravity="center"
                android:textSize="22sp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="8dip"
            android:background="#33b010" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/dialog_message_panel"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_below="@id/dialog_title_panel"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="17dip"
            android:gravity="center_horizontal|top" >

            <TextView
                android:id="@+id/dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/back"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_buttons"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/dialog_message_panel"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dip"
            android:gravity="center" >

            <Button
                android:id="@+id/dialog_yes"
                style="@style/frameDialogStyle"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/diag_cancle_btn_selector"
                android:gravity="center"
                android:text="@string/yes"
                android:visibility="gone" >
            </Button>

            <Button
                android:id="@+id/dialog_no"
                style="@style/frameDialogStyle"
                android:layout_width="25dp"
                android:layout_height="40dip"
                android:layout_margin="10dp"
                android:background="@drawable/framedialog_button_normal"
                android:gravity="center"
                android:text="@string/no"
                android:visibility="gone" >
            </Button>

            <Button
                android:id="@+id/dialog_cancel"
                style="@style/frameDialogStyle"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/diag_cancle_btn_selector"
                android:gravity="center"
                android:text="@string/cancel"
                android:visibility="gone" >
            </Button>
        </LinearLayout>
    </RelativeLayout>

</com.yto.zhang.util.iphoneDialog.FrameDialogView>