<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/log_in_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbg_grayd7d7d7"
    android:orientation="vertical" >
	<include 
	    android:id="@+id/title_bar"
	    layout="@layout/stitlebar"
	    />
	    
	<ScrollView 
	    android:id="@+id/log_in_sv"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:scrollbars="none">
	    
		<RelativeLayout 
		    android:layout_width="match_parent"
    		android:layout_height="wrap_content">
		    
		    <LinearLayout
		        android:id="@+id/account_layout" 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/white"
		        android:layout_marginLeft="15dp"
		        android:layout_marginRight="15dp"
		        android:layout_marginTop="50dp"
		        android:gravity="center_vertical"
		        android:orientation="horizontal"
		        >
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:src="@drawable/login_icon_phone"
		            />
		        <ImageView 
		            android:layout_marginLeft="9dp"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/login_line"
		            />
		        <EditText 
		            android:id="@+id/log_in_account"
		            android:layout_width="match_parent"
		            android:layout_height="50dp"
		            android:background="@null"
		            android:layout_marginTop="5dp"
		            android:layout_marginBottom="5dp"
		            android:layout_marginLeft="5dp"
		            android:gravity="center_vertical"
		            android:maxLength="11"
		            android:inputType="phone"
		            android:hint="手机号码"
		            android:textColorHint="#cccccc"
		            android:textColor="#2d2d2d"
		            />
		    </LinearLayout>
		    <TextView 
		           android:id="@+id/show_ac_error"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_below="@id/account_layout"
		          android:visibility="invisible"
		           android:layout_centerHorizontal="true"
		           android:gravity="center"
		           android:textSize="12sp"
		           android:textColor="#ffffff"
		           android:drawableLeft="@drawable/icon_warn"
		           android:background="#e81929"
		           android:padding="5dp"
		         
		           />
		    <RelativeLayout
		        android:id="@+id/pw_layout" 
		        android:layout_below="@id/account_layout"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/white"
		        android:layout_marginLeft="15dp"
		        android:layout_marginRight="15dp"
		        android:layout_marginTop="30dp"
		        
		       
		        >
		        <ImageView 
		            android:id="@+id/first_icon"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:src="@drawable/login_icon_lock"
		            android:layout_centerVertical="true"
		            />
		        <ImageView 
		            android:id="@+id/second_icon"
		            android:layout_marginLeft="9dp"
		            android:layout_toRightOf="@id/first_icon"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/login_line"
		            android:layout_centerVertical="true"
		            />
		        <EditText 
		            android:id="@+id/log_in_pw"
		            android:layout_toRightOf="@id/second_icon"
		            android:layout_toLeftOf="@+id/third_icon"
		            android:background="@null"
		            android:layout_width="match_parent"
		            android:layout_centerVertical="true"
		            android:layout_height="50dp"
		            android:layout_marginTop="5dp"
		            android:layout_marginBottom="5dp"
		            android:hint="密码"
		            android:textColorHint="#cccccc"
		            android:textColor="#2d2d2d"
		            android:inputType="textPassword"
		            android:layout_marginLeft="5dp"
		            android:gravity="center_vertical"
		            android:maxLength="20"
		             android:digits="_0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLIMNOPQRSTUVWXYZ"
		            />
		         <CheckBox
		            android:id="@+id/third_icon"
		            android:layout_marginLeft="9dp"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="10dp"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		         	android:button="@drawable/is_show_pw_selector"
		            android:layout_centerVertical="true"
		            />
		    </RelativeLayout>
		    <TextView 
		           android:id="@+id/show_pw_error"
		           android:layout_below="@id/pw_layout"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		          android:visibility="invisible"
		           android:layout_centerHorizontal="true"
		           android:drawableLeft="@drawable/icon_warn"
		           android:gravity="center"
		           android:textSize="12sp"
		           android:textColor="#ffffff"
		           android:background="#e81929"
		           
		           android:padding="5dp"
		           />
		    
		    <Button 
		        android:id="@+id/login"
		        android:layout_marginTop="40dp"
		        android:background="@drawable/selector_maintakepk_button"
		        android:layout_marginLeft="15dp"
		        android:layout_marginRight="15dp"
		        android:layout_marginBottom="5dp"
		        android:layout_below="@id/pw_layout"
		        android:layout_width="match_parent"
		        android:layout_height="50dp"     
		        android:gravity="center"
		        android:textColor="#ffffff"
		        android:text="登录"
		        />
	    </RelativeLayout>
    </ScrollView>
    
	<RelativeLayout 
	    android:layout_width="match_parent"
		android:layout_height="match_parent">
	    
		<TextView 
		    android:id="@+id/getback_pw"
		    android:layout_width="120dp"
		    android:layout_height="50dp"
		    android:background="#e6e6e6"
		    android:layout_marginBottom="20dp"
		    android:layout_alignParentBottom="true"
		    android:layout_centerHorizontal="true"
		    android:gravity="center"
		    android:text="找回密码?"
		    android:textColor="#8d8d8d"
	    />
	</RelativeLayout>
</LinearLayout>