<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainbg_grayd7d7d7"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
 <include
     layout="@layout/stitlebar" />
 
 <LinearLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="center_horizontal"
     android:gravity="center_horizontal"
     android:orientation="vertical"
     >
     <TextView 
     
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="13sp"
     android:text="已发送验证码短信到"
     android:textColor="#2d2d2d"
     android:layout_marginTop="30dp"
     />
     <TextView 
     android:id="@+id/tel_num"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dp"
     android:textSize="15sp"
     android:text="15265456959"
     />
     
 </LinearLayout>
 <!-- login_inputbox_bj -->
 	<LinearLayout 
 	    android:layout_width="match_parent"
 	    android:layout_height="50dp"
 	    android:layout_marginTop="10dp"
 	    android:background="@color/white"
 	    android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
 	    android:gravity="center_vertical">
     
 	    <TextView 
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:layout_marginLeft="20dp"
 	        android:layout_marginRight="20dp"
 	        android:textSize="15sp"
 	        android:text="验证码"/>
     
		<EditText 
		    android:id="@+id/fill_in_id_code"
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:gravity="center_vertical"
		    android:background="@color/white"
		    android:hint="请输入验证码"
		    android:textSize="15sp"
		    android:textColorHint="#cccccc"
		    android:inputType="number"
		    />
	</LinearLayout>
       
   <LinearLayout 
       android:id="@+id/resend_id_code"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:clickable="false"
       android:gravity="center"
       android:layout_gravity="center_horizontal"
       >
	       
	       <TextView 
	           android:id="@+id/no_change"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textColor="#767676"
	           android:layout_marginLeft="5dp"
	           android:text="重新发送验证码"
	           />
	       
	       <TextView 
	           android:id="@+id/secend_count"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textColor="@color/mainbutton_redf26221"
	           android:text="59秒"
	           />
   	</LinearLayout>

   <Button 
       android:id="@+id/checkcode_confirm_bt"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@drawable/selector_maintakepk_button"
       android:layout_margin="20dp"
       android:gravity="center"
       android:textSize="18sp"
       android:textColor="#ffffff"
       android:text="下一步"/>
</LinearLayout>