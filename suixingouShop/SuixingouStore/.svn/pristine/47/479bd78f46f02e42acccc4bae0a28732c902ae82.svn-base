<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    
    
    <LinearLayout 
        android:id="@+id/liner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp"
        >
            <TextView 
        android:id="@+id/p_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="农夫山泉有点甜"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:maxEms="7"
        />
     <TextView 
        android:id="@+id/p_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:text="500ml"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        />
     </LinearLayout>
    
      <TextView 
        android:id="@+id/p_price"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="36.00"
        android:paddingRight="10dp"
        android:textSize="14sp"
        android:textColor="@color/mainColor"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bianji_inputbox_yuan_all2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical|left"
        android:paddingLeft="5dp"
        />
    
          <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑价格"
        android:layout_alignTop="@+id/p_price"
        android:layout_toLeftOf="@+id/p_price"
        android:layout_marginTop="7dp"
        android:textColor="@color/gray_btn"
        />
          

      <LinearLayout 
          android:id="@+id/gone_linear"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
		android:visibility="invisible"
		android:layout_below="@+id/liner"
          >
          <TextView 
              android:id="@+id/text_soldout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="下架"
              android:background="@color/gray_btn"
              android:layout_weight="1"
              android:textColor="@color/white"
              android:gravity="center"
              android:paddingTop="20dp"
              android:paddingBottom="20dp"
              />
                    <TextView 
              android:id="@+id/text_delete"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="删除"
             android:background="#e14545"
             android:layout_weight="1"
             android:textColor="@color/white"
              android:gravity="center"
               android:paddingTop="20dp"
              android:paddingBottom="20dp"
              />
      </LinearLayout>
    
          <LinearLayout 
              android:id="@+id/bottomlinear"
              android:layout_width="fill_parent"
              android:layout_height="1dp"
              android:background="@color/gray2"
              android:orientation="horizontal"
              android:layout_alignParentBottom="true"
              ></LinearLayout>
</RelativeLayout>
