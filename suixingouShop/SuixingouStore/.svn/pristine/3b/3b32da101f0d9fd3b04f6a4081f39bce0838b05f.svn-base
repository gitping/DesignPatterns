<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="#00000000"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="250dp"
		android:layout_height="wrap_content"
		android:background="#00000000">
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/icon_black_triangle"/>
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="250dp"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
    	android:layout_marginRight="10dp"
    	android:background="@color/maintext_gray3b3b3e"
    	android:orientation="vertical">
    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:gravity="center"
	        android:textSize="14sp"
	        android:textColor="#ffffff"
	        android:text="包裹操作"/>
	    
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1.5px"
	        android:background="#9f9f9f"/>
	    
	    <LinearLayout 
	        android:id="@+id/pop_reject_ll"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="50dp"
		        android:layout_marginLeft="40dp"
		        android:layout_gravity="left"
		        android:gravity="center_vertical"
		        android:orientation="horizontal">
		        
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/icon_takepk_reject"/>
		        
		        <TextView 
		            android:id="@+id/pop_reject_tv"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dp"
			        android:textSize="14sp"
			        android:textColor="#ffffff"
			        android:text="拒收"/>
		        
		    </LinearLayout>
		    
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1.5px"
		        android:background="#9f9f9f"/>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:id="@+id/pop_loss_ll"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_marginLeft="40dp"
	        android:layout_gravity="left"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/icon_takepk_loss"/>
	        
	        <TextView 
	            android:id="@+id/pop_loss_tv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:textSize="14sp"
		        android:textColor="#ffffff"
		        android:text="包裹遗失"/>
	        
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
