<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardshape_round_rect"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/d_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="18dip"
            android:layout_marginBottom="12dip"
            android:textSize="22sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="10dip"
            android:background="#33b010" />

        <TextView
            android:id="@+id/d_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="16dip"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/dialog_buttons"
            android:layout_width="match_parent"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="15dip"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/diag_cancle_btn_selector"
                android:gravity="center"
                android:visibility="visible" >
            </Button>

            <Button
                android:id="@+id/btn_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/diag_cancle_btn_selector"
                android:gravity="center"
                android:visibility="gone" >
            </Button>

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/diag_confir_btn_selector"
                android:gravity="center"
                android:visibility="visible" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>