<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbg_grayd7d7d7"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/find_content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:background="@drawable/commit_expresslist_selector"
        android:orientation="vertical">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            
            <ImageView 
                android:id="@+id/finditem_expic_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/exmoren"/>
            
            <TextView 
                android:id="@+id/finditem_exname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/maintext_gray3b3b3e"
                android:text="圆通速递"/>
        </LinearLayout>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            
	        <LinearLayout 
	            android:id="@+id/pkdetail_pkno_ll"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical"
	            android:orientation="horizontal">
	            
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:drawableLeft="@drawable/icon_pkdetail_no"
	                android:drawablePadding="10dp"
	                android:textSize="14sp"
	                android:textColor="@color/maintext_gray3b3b3e"
	                android:text="快递单号："/>
	            
	            <TextView 
	                android:id="@+id/finditem_mailno_tv"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:textSize="14sp"
	                android:textColor="@color/maintext_gray3b3b3e"
	                android:text="111111111"/>
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:id="@+id/pkdetail_tel_ll"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/pkdetail_pkno_ll"
	            android:layout_marginTop="20dp"
	            android:gravity="center_vertical"
	            android:orientation="horizontal">
	            
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:drawableLeft="@drawable/icon_pkdetail_tel"
	                android:drawablePadding="10dp"
	                android:textSize="14sp"
	                android:textColor="@color/maintext_gray3b3b3e"
	                android:text="收件人手机号："/>
	            
	            <TextView 
	                android:id="@+id/finditem_tel_tv"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:textSize="14sp"
	                android:textColor="@color/maintext_gray3b3b3e"
	                android:text="12345678901"/>
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:id="@+id/pkdetail_pknum_ll"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/pkdetail_tel_ll"
	            android:layout_marginTop="20dp"
	            android:gravity="center_vertical"
	            android:orientation="horizontal">
	            
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:drawableLeft="@drawable/icon_pkdetail_num"
	                android:drawablePadding="10dp"
	                android:textSize="14sp"
	                android:textColor="@color/maintext_gray3b3b3e"
	                android:text="包裹编号："/>
	            
	            <TextView 
	                android:id="@+id/finditem_pknum_tv"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:textSize="14sp"
	                android:textColor="@color/maintext_gray3b3b3e"
	                android:text="0"/>
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:id="@+id/pkdetail_time_ll"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/pkdetail_pknum_ll"
	            android:layout_marginTop="20dp"
	            android:gravity="center_vertical"
	            android:visibility="gone"
	            android:orientation="horizontal">
	            
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:drawableLeft="@drawable/icon_pkdetail_scantime"
	                android:drawablePadding="10dp"
	                android:textSize="14sp"
	                android:textColor="@color/maintext_gray3b3b3e"
	                android:text="自提点在站时间："/>
	            
	            <TextView 
	                android:id="@+id/finditem_stationtime_tv"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:textSize="14sp"
	                android:textColor="@color/maintext_gray3b3b3e"
	                android:text="05-26 15：20"/>
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:gravity="center_horizontal"
	            android:orientation="vertical">
	            
	            <Button 
	                android:id="@+id/finditem_status_tv"
	                android:layout_width="50dp"
	                android:layout_height="wrap_content"
	                android:background="@drawable/shape_status_frame"
	                android:gravity="center"
	                android:padding="5dp"
	                android:textColor="@color/mainbutton_orangef9a84a"
	                android:textSize="14sp"
	                android:text="预约取件"
	                android:clickable="false"/>
	            
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="3dp"
	                android:visibility="gone"
	                android:text="约定取件日"/>
	            
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:drawableLeft="@drawable/icon_pkdetail_calendar"
	                android:drawablePadding="2dp"
	                android:visibility="gone"
	                android:text="MM/dd"/>
	            
	        </LinearLayout>
        </RelativeLayout>
	</LinearLayout>
</LinearLayout>
