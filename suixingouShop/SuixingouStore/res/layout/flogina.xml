<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/fltitleName"
        android:textColor="@color/black"
        android:background="@drawable/login_logo_suixin"
        android:textSize="24sp" />

    

    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="30dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/flPhoneNum"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="4dip"
                android:layout_weight="1"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:background="@drawable/sms_choice_nomal"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableLeft="@drawable/login_icon_phone"
                android:maxLength="11"
                android:textColor="@color/black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/flVerificationCodeET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="4dip"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/sms_choice_nomal"
                android:hint="请输入验证码"
                android:inputType="numberSigned"
                android:drawableLeft="@drawable/login_icon_write"
                android:singleLine="true"
                android:maxLength="4"
                android:textColor="@color/mainColor" />
                        <Button
                android:id="@+id/flVerificationCode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/login_code_button"
                android:gravity="center"
                android:onClick="fonclick"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/flVerificationCode"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/flagree"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/FLeftMenuHeidth"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="22dp"
        android:background="@drawable/green_button_selector"
        android:gravity="center"
        android:onClick="fonclick"
        android:text="@string/flagree"
        android:textColor="@color/back"
        android:textSize="15sp" />


        <TextView
            android:id="@+id/flprotocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:onClick="fonclick"
            android:text="@string/flprotocol"
            android:textColor="@color/mainColor"
            android:textStyle=""
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_gravity="bottom|center_horizontal"
            android:paddingBottom="5dp"
            android:textSize="15dip" />
</LinearLayout>