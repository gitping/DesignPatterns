<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mainbg_grayd7d7d7"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/pkopheader_main_ll"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/mainbg_grayd7d7d7"
    	android:orientation="vertical" >
        
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dp">
	        
	        <TextView 
	            android:id="@+id/header_tel_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:textColor="#333333"
	            android:textSize="16sp"
	            android:text="13848584759"/>
	        
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true">
	            
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#333333"
		            android:textSize="16sp"
		            android:text="共"/>
	            
		        <TextView 
		            android:id="@+id/header_size_tv"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="@color/maintext_yellow"
		            android:textSize="16sp"
		            android:text="--"/>
		        
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#333333"
		            android:textSize="16sp"
		            android:text="件包裹"/>
	        </LinearLayout>
	    </RelativeLayout>    
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/mainbg_grayd7d7d7"
        android:orientation="vertical">
        
        <LinearLayout 
            android:id="@+id/header_success_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:orientation="horizontal">
	        
            <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"	        
		        android:textColor="#333333"
		        android:textSize="14sp"
		        android:text="共"/>
            
            <TextView 
		        android:id="@+id/header_success_tv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/maintext_yellow"
		        android:textSize="14sp"/>
            
            <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"	        
		        android:textColor="#333333"
		        android:textSize="14sp"
		        android:text="件  取件成功"/>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/header_reject_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:orientation="horizontal">
	        
            <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"	        
		        android:textColor="#333333"
		        android:textSize="14sp"
		        android:text="共"/>
            
            <TextView 
		        android:id="@+id/header_reject_tv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/maintext_yellow"
		        android:textSize="14sp"/>
            
            <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"	        
		        android:textColor="#333333"
		        android:textSize="14sp"
		        android:text="件  拒收，系统会通知网点取走并退件"/>
        </LinearLayout>
	    
        <LinearLayout 
            android:id="@+id/header_loss_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:orientation="horizontal">
	        
            <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"	        
		        android:textColor="#333333"
		        android:textSize="14sp"
		        android:text="共"/>
            
            <TextView 
		        android:id="@+id/header_loss_tv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/maintext_yellow"
		        android:textSize="14sp"/>
            
            <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"	        
		        android:textColor="#333333"
		        android:textSize="14sp"
		        android:text="件  遗失，系统会通知快递员来处理赔偿"/>
        </LinearLayout>

	    <LinearLayout 
	        android:id="@+id/header_fail_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:orientation="horizontal">
	        
            <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"	        
		        android:textColor="#333333"
		        android:textSize="14sp"
		        android:text="共"/>
            
            <TextView 
		        android:id="@+id/header_fail_tv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/maintext_yellow"
		        android:textSize="14sp"/>
            
            <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#333333"
		        android:textSize="14sp"
		        android:text="件  取件失败"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
