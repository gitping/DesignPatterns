<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popparent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/FLeftMenuHeidth"
    android:background="@color/maintitle_gray616161" >

    <ImageButton 
        android:id="@+id/stitlebarMenu_ib"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="finishOnclick"
        android:visibility="visible"
        android:scaleType="center"
        android:background="@null"
        android:src="@drawable/selector_mainback_button"/>

    <TextView
        android:id="@+id/text_topmiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxEms="8"
        android:singleLine="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20sp" />
    
    <Button 
        android:id="@+id/triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bianji_icon_arrow_down"
        android:layout_toRightOf="@+id/text_topmiddle"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        />
    
    <Button
        android:id="@+id/but_topright"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:textColor="@drawable/selector_maincolor_textview"
        android:textSize="15sp"
        android:visibility="gone" />

</RelativeLayout>