<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <LinearLayout 
        android:id="@+id/seclin"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/mainbg_grayd7d7d7"
        >
        
    <EditText 
        android:id="@+id/collect_password"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:digits="0123456789poiuytrewqasdfghjklmnbvcxzQWERTYUIOPLKJHGFDSAZXCVBNM"
        android:maxLength="20"
        android:hint="请输入对应的手机号/快递单号"
        android:textSize="16sp"
        android:background="@color/white"
        />
    
    <Button
        android:id="@+id/btn_take"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_maintakepk_button"
        android:gravity="center"
        android:text="查找"
        android:textColor="@color/white"
        android:textSize="20sp" />
    </LinearLayout>
    
     <include
        layout="@layout/sloading_error"
        android:visibility="visible" />
</RelativeLayout>
