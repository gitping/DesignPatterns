<?xml version="1.0" encoding="utf-8"?>
<com.yto.zhang.util.iphoneDialog.FrameDialogView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical|center_horizontal" >

    <RelativeLayout
        android:id="@+id/dialog_panel"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/framedialog" >

        <LinearLayout
            android:layout_marginTop="8dip"
            android:id="@+id/dialog_title_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/dialog_title"
                style="@style/frameDialogStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal|top"
            android:id="@+id/dialog_message_panel"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_below="@id/dialog_title_panel"
            android:layout_marginTop="17dip"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="20dp" >

            <TextView
                android:id="@+id/dialog_message"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_buttons"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/dialog_message_panel"
            android:layout_marginTop="8dip"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center" >

            <Button
                android:id="@+id/dialog_yes"
                style="@style/frameDialogStyle"
                android:layout_width="25dp"
                android:layout_height="40dip"
                android:layout_margin="10dp"
                android:background="@drawable/framedialog_button_active"
                android:gravity="center"
                android:text="@string/yes"
                android:visibility="gone" >
            </Button>

            <Button
                android:id="@+id/dialog_no"
                style="@style/frameDialogStyle"
                android:layout_width="25dp"
                android:layout_height="40dip"
                android:layout_margin="10dp"
                android:background="@drawable/framedialog_button_normal"
                android:gravity="center"
                android:text="@string/no"
                android:visibility="gone" >
            </Button>

            <Button
                android:id="@+id/dialog_cancel"
                style="@style/frameDialogStyle"
                android:layout_width="25dp"
                android:layout_height="40dip"
                android:layout_margin="10dp"
                android:background="@drawable/framedialog_button_normal"
                android:gravity="center"
                android:text="@string/cancel"
                android:visibility="gone" >
            </Button>
        </LinearLayout>
    </RelativeLayout>

</com.yto.zhang.util.iphoneDialog.FrameDialogView>