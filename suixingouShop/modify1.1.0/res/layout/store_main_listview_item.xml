<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical" 
    >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#eee"  
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" 
        android:paddingLeft="10dip"
    	android:paddingRight="10dip"
        >
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

    <TextView
        android:id="@+id/storemain_djd_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="徐汇区桂林路389号1楼501室"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <TextView 
        android:id="@+id/mymain_orderstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3.8"
        android:gravity="center"
        android:textColor="@color/fcolor"
        android:textSize="15sp"
        android:text="取消订单"
        android:visibility="gone"
        />
    
    </LinearLayout>

    <TextView
        android:id="@+id/storemain_djd_sdtime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="送达时间:今天18:00  还剩120分钟"
        android:textColor="@color/producttext"
        android:textSize="16sp" />

    
            <TextView
                android:id="@+id/storemain_djd_djprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="订单金额:￥50元"
                android:textColor="@color/moneycolor"
                android:textSize="16sp" />
            
            <TextView
                android:id="@+id/main_orderDesc" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:textSize="14sp"
        		android:textColor="@color/myred"
        		android:visibility="gone"
                />


      <LinearLayout 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          >
          <Button
                android:id="@+id/sm_callCustom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/fshape_bgno_listview"
                android:drawableLeft="@drawable/express_callphone"
                android:drawablePadding="4dip"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="5dip"
                android:text="021-69875534李先生"
                android:textColor="@color/black"
                android:textSize="16sp" />
          
      </LinearLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="商品清单"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <ListView 
        android:id="@+id/productDetailsListview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:divider="@null"
        />
    <TextView
        android:id="@+id/sm_total"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="合计:￥ 50.00" 
        android:gravity="right"
        android:textColor="@color/producttext"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/sm_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备注：洗衣粉和泡面分开，谢谢" 
        android:textColor="@color/fcolor"
        android:layout_marginTop="10dip"
        android:textSize="15sp"
        />
    
