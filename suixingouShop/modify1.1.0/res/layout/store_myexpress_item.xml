<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dip"
        android:background="#eee"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/store_myexpress_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:text="徐汇区桂林路389号1楼501室"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <TextView 
        android:id="@+id/myexpress_orderstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4.2"
        android:gravity="center"
        android:textColor="@color/fcolor"
        android:textSize="15sp"
        android:text="取消订单"
        />
    </LinearLayout>

    <TextView
        android:id="@+id/store_myexpress_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="取件时间:今天18:00  还剩120分钟"
        android:textSize="15sp"
        android:textColor="@color/producttext"
         />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/store_myexpress_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约号:201402130001"
                android:textColor="@color/cyyh"
                android:textSize="14sp" 
                />
        </LinearLayout>

        <Button
            android:id="@+id/store_myexpress_takeorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/green_button_selector"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="接单"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    <TextView 
        android:id="@+id/orderDescr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dip"
        android:textSize="14sp"
        android:textColor="@color/myred"
        />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/storemain_line"/>
    
    <TextView
        android:id="@+id/store_myexpress_things"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="物品:5kg 婴儿床"
        android:textSize="15sp" 
        />
    <TextView
        android:id="@+id/store_myexpress_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="备注：开个宝马过来"
        android:textSize="12sp" 
        android:textColor="@color/fcolor"
        />
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_gravity="center_horizontal"
	    android:gravity="right"
	    android:layout_marginTop="8dp"
	    android:layout_marginBottom="20dp"
	    >
             <LinearLayout 
                 android:id="@+id/cancel_order_linear"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center_vertical"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:background="@drawable/fshape_bgno_listview"
                 android:paddingTop="8dp"
                  android:paddingBottom="8dp"
	                android:paddingLeft="30dp"
	       			 android:paddingRight="30dp"
                 >
            <LinearLayout 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:gravity="center_vertical"
                       >
           <Button 
                  android:layout_width="25dp"
               android:layout_height="25dp"
               android:layout_gravity="left"
               android:background="@drawable/close_order"
               />
                   <TextView 
	        android:id="@+id/cancel_order"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="关闭订单"
	        android:textSize="14sp"
	        android:layout_marginLeft="5dp"
	        android:textColor="@color/black"

	        />
                   </LinearLayout>
             </LinearLayout>
	  
             
             
             <LinearLayout 
                  android:id="@+id/takephone_linear"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="10dp"
                 android:gravity="center"
                 android:layout_gravity="right"
                 android:background="@drawable/fshape_bgno_listview"
                  android:paddingTop="8dp"
                  android:paddingBottom="8dp"
	                android:paddingLeft="30dp"
	       			 android:paddingRight="30dp"
                 >
                   <LinearLayout 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:gravity="center_vertical"
                       >
           <Button 
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:layout_gravity="left"
               android:background="@drawable/express_callphone"
               />
                   <TextView 
	        android:id="@+id/take_phone"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="15001787543李先生"
	        android:textSize="14sp"
	        android:maxLength="14"
	        android:singleLine="true"
	        android:layout_marginLeft="5dp"
	        android:textColor="@color/black"
	        />
                   </LinearLayout>
             </LinearLayout>
	</LinearLayout>
	<ImageView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/list_line" 
	    />
    

</LinearLayout>
