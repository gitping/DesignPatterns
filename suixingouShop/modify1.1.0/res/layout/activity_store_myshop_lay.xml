<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <include
        android:id="@+id/topbar"
        layout="@layout/stitlebar" />

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/topbar"
        android:layout_marginTop="10dp"
        android:background="#e2e2e2"
        android:orientation="horizontal"
        android:padding="1dp" >

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:padding="4dp"
            android:src="@drawable/search_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="营业时间: "
                android:textColor="@color/fcolor"
                android:textSize="14sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="配送设置: "
                android:textColor="@color/fcolor"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myshop_shopinfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/fcolor"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/fsetting"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/fcolor"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/ssetting"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/fcolor"
                android:textSize="14sp" />
            
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lin2"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFFACD" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/myshop_menu_butyl"
                    style="@style/Store_myMenuButStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="饮料" />
            </TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/fcolor" />

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/myshop_menu_butls"
                    style="@style/Store_myMenuButStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@color/mainColor"
                    android:text="零食" />
            </TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/fcolor" />

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/myshop_menu_buttw"
                    style="@style/Store_myMenuButStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粮油副食" />
            </TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/fcolor" />

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/myshop_menu_butyj"
                    style="@style/Store_myMenuButStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="烟酒" />
            </TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/fcolor" />

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/myshop_menu_butryp"
                    style="@style/Store_myMenuButStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日用品" />
            </TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/fcolor" />

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/myshop_menu_butsx"
                    style="@style/Store_myMenuButStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生鲜" />
            </TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/fcolor" />

            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/myshop_menu_butqt"
                    style="@style/Store_myMenuButStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="餐饮" />
            </TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/fcolor" />
        </TableLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#BDBDBD"
            android:orientation="vertical" >

            <com.yto.suixingoustore.util.view.listview.XListView
                android:id="@+id/myshop_listview"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:cacheColorHint="#00000000"
                android:divider="@color/black"
                android:dividerHeight="0.6dp"
                android:listSelector="#00000000"
                android:scrollbars="none"
                android:visibility="visible" >
            </com.yto.suixingoustore.util.view.listview.XListView>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/sloading_error" />

</RelativeLayout>