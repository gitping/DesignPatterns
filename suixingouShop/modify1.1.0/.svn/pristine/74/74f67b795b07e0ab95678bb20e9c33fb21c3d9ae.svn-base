<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="@drawable/fdownloadapkhandler_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/content_view_image"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="5dip"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:src="@drawable/app_icon" />

    <TextView
        android:id="@+id/content_view_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/content_view_progress"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/content_view_image"
        android:text="0%"
         />

    <ProgressBar
        android:id="@+id/content_view_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/content_view_image"
        android:max="100" />

    <TextView
        android:id="@+id/tv_main_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/content_view_progress"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="/0"
        />

    <TextView
        android:id="@+id/tv_main_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/content_view_progress"
        android:layout_toLeftOf="@+id/tv_main_max"
        android:text="0"
         />

</RelativeLayout>